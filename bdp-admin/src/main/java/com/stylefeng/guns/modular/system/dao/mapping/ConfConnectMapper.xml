<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.modular.system.dao.ConfConnectMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stylefeng.guns.modular.system.model.ConfConnect">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="type_id" property="typeId" />
        <result column="host" property="host" />
        <result column="port" property="port" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="dbname" property="dbname" />
        <result column="desc" property="desc" />
        <result column="create_time" property="createTime" />
        <result column="create_per" property="createPer" />
        <result column="mod_time" property="modTime" />
        <result column="mod_per" property="modPer" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, type_id, host, port, username, password, dbname, desc, create_time, create_per, mod_time, mod_per
    </sql>

    <select id="selectByJobInfoId" resultMap="BaseResultMap">
		SELECT t3.*
		FROM job_info t1
			INNER JOIN job_info_conf t2 ON t1.id = t2.job_info_id
			INNER JOIN conf_connect t3 ON t3.`name` = t2.`value`
		WHERE t1.id = #{jobInfoId}
	</select>
</mapper>
